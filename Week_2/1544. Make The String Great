1544. Make The String Great

https://leetcode.com/problems/make-the-string-great/submissions/1889576007/

class Solution {
    public String makeGood(String s) {
        Stack<Character> st = new Stack<>();
        String str = "";
        st.push(s.charAt(0));
        for(int i=1; i<s.length(); i++){
            if(!st.isEmpty() && (Math.abs(st.peek() - s.charAt(i)) == 32)){
                st.pop();
            } else{
                st.push(s.charAt(i));
            }
        }
        while(!st.isEmpty()){
            str += st.pop();
        }
        String ans = "";
        for(int i=str.length()-1; i>=0; i--){
            ans += str.charAt(i);
        }
        return ans;
    }
}
